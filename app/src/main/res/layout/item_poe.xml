<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/poe_item_content_ll"
              android:layout_width="match_parent"
              android:layout_height="180dp"
              android:layout_marginLeft="16dp"
              android:layout_marginStart="16dp"
              android:layout_marginRight="16dp"
              android:layout_marginEnd="16dp"
              android:orientation="vertical"
              android:weightSum="3"
              android:background="?android:selectableItemBackground"
              android:divider="@drawable/poe_divider"
              android:dividerPadding="1px"
              android:showDividers="end">

    <TextView
            android:id="@+id/poe_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="normal"
            android:textColor="#404040"
            android:text="菩萨蛮·回廊远砌生秋草"/>

    <TextView
            android:id="@+id/poe_item_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="12sp"
            android:textStyle="normal"
            android:textColor="#CEAD53"
            android:text="五代/冯延巳"/>

    <TextView
            android:id="@+id/poe_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="normal"
            android:textColor="#828282"
            android:text="@string/poe"/>

</LinearLayout>
